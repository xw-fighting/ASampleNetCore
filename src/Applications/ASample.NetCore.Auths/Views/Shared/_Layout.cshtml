                            '<li><a href="">缴费分析</a></li>' +
                            '<li><a href="">菜单分析</a></li>' +
                            '<li><a href="">接口分析</a></li>' +
                            '</ul>' +
                            '</li>'
                    });
                },
                error: function () {

                }
            })
        };
    </script>
