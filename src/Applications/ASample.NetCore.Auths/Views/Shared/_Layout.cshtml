    <script type="text/javascript">
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            setTimeout(function () {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };
                toastr.success('后台管理系统', '欢迎进入');

            }, 1300);


            $('.footable').footable();

            //表格的高度
            var contH = $(window).height() - $('#search-height').height() - 308;
            $('#content-height').height(contH);

            //获取按钮层的高度
            var btnH = $('.fixed-btn > .row').children().height() + 11;
            $('.fixed-btn').height(btnH);

            getUserName();

            $("#logOut").click(function () {
                logOut();
            });

        });
        function getUserName() {
            $.ajax({
                url: "/api/Account/profile",
                dataType: "json",
                contentType: "application/json",
                method: "post",
                success: function (res) {
                    if (res.IsError) {
                        location.href = "/Account/Login";
                        return;
                    }
                    else {
                        $("#userName").html(res.Data);
                    }
                },
                error: function () {

                }
            })
        }

        function logOut() {
            $.ajax({
                url: "/api/Account/sign-out",
                dataType: "json",
                contentType: "application/json",
                method: "post",
                success: function (res) {
                    if (res.IsError) {
                        layer.alert(res.Message);
                        return;
                    }
                    else {
                        location.href = "/Account/Login";
                    }
                },
                error: function () {

                }
            })
        }

        function getMenus() {
            $.ajax({
                url: "/Right/",
                dataType: "json",
                contentType: "application/json",
                method: "get",
                success: function (res) {
                    $("#").html("");
                    var menuHtml = "";
                    $(res).each(function (index, item) {
                        menuHtml += '<li>' +
                            '<a href="#"><i class="fa fa-bar-chart-o"></i> ' +
                            '< span class="nav-label" > 报表统计</span > <span class="fa arrow"></span></a >' +
